<VBox prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: silver;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.fra.uas.digitales.kochbuch.frontend.ControllerFilterLayout">
   <children>
      <BorderPane prefHeight="155.0" prefWidth="600.0">
         <top>
            <VBox alignment="TOP_CENTER" prefWidth="600.0" BorderPane.alignment="CENTER">
